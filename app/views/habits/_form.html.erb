<%= form_for @habit do |f| %>
  <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :difficulty %>
        <%= f.range_field :difficulty, in: 1..3, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :frequency %>
        <%= f.range_field :frequency, in: 1..7, class: 'form-control' %>
      </div>

      </div>
      <%= f.submit 'Submit', class: 'btn btn-default' %>
    <% end %>
  </div>